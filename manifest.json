{
  "manifest_version": 3,
  "name": "ToDo List",
  "version": "1.0",
  "description": "A ToDo List and reminder manager",
  "permissions": ["storage", "alarms", "notifications", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
